upstream olfy_server{
    server localhost:8000 fail_timeout=0
}
server{
    listen:80;
    client_max_body_size 4G;
    error_log /home/sushant/Desktop/django_project/logs/nginx-error.log;
    location /static {
        alias /home/sushant/Desktop/django_project/olfy/static;
    }
    location{
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host  $http_host;
        proxy_redirect off;
        proxy_pass http://olfy_server;
    }
}