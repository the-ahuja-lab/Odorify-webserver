upstream olfy_app_server {
    server unix:/home/gaurav/django_project/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;
    server_name odorify.ahujalab.iiitd.edu.in;
    #client_max_body_size 4G;
    access_log /home/gaurav/django_project/logs/nginx-access.log;
    error_log /home/gaurav/django_project/logs/nginx-error.log;
	location /static/ {
	    alias   /home/gaurav/django_project/olfy/static/;
	}

location / {
    proxy_read_timeout 3600s;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    if (!-f $request_filename) {
    proxy_pass http://olfy_app_server;
    break;
    }
}
}
